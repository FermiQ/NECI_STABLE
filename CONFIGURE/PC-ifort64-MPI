     compiler='INTEL-ifort9-on-LINUX'
     IRAT=2
     CPP='/lib/cpp -P -C -traditional'
     CPPFLAGS="-D__Linux -DLAPACK -DFFT_DEFAULT -DPOINTER8 #CMPLXFLAG -DSVNVER='\$(SVNVER)' -DMAXMEM='\$(MAXMEM)' -DPARALLEL"
     NCPUS=2
     #-sb is to use Workshop package
     FFLAGS='-r8'
     LFLAGS='-L ~/src/lib/fftw-3.1.2/lib -L ~/lib/fftw-3.1.2/lib -lfftw3  -lacml'
     LDFLAGS='-nostdlib -nostartfiles -Wl,-r' 
     F90FLAGS=''
     GLOBALS='GLOBALS-ifort'
     if [ $debug ]; then
       FC='mpif90 -c -g'
       CC='gcc -g -sb -C -errtags'
       LD='mpif90 -g -Bstatic'
       FCD='mpif90 -c -g '
       CCD='gcc -g -sb -C -errtags'
       LDD='mpif90 -g'
     else
       FC='mpif90 -c -O3' 
       CC='gcc -O2 -Wall -m64'
       LD='mpif90 -O3 -Bstatic'
       FCD='mpif90 -c -g'
       CCD='gcc -g -sb -C -errtags'
       LDD='mpif90 -g'
     fi
     LDLIB=' ifort'
     LDLIBFLAGS=' -nostdlib -nostartfiles -Wl,-r'
