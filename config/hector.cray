[main]
fc = ftn 
cc = g++
ld = ftn
ldflags = -m64
libs = -lfftw3 -lacml -lstdc++ -lrt -lm
cpp = cpp -C -traditional
cppflags =  -D__Linux -DPOINTER8 -DPARALLEL -D__INT64 -DHAVE_SSE2 -D__SHARED_MEM -DCRAY_ETIME
compiler = pathf95-on-LINUX
module_flag = -J

[dbg]
fflags = -g -fno-second-underscore -e m
cflags = -g  -h noexceptions
ldflags = -g -Bstatic
f90flags = -ffortran-bounds-check -N255

[opt]
fflags = -O3 -e m
f90flags = -N255
cflags = -O3 -h noexceptions
ldflags = -O3
