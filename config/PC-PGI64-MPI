[main]
fc = mpif90 
compiler = PGI-pgf95-on-LINUX
cc = mpic++
ccd = g++
cpp = cpp -C -traditional
cppflags =  -D__Linux -DPOINTER8 -DPARALLEL -DHAVE_SSE2
ld = mpif90
libs = -L ~/src/lib/fftw-3.1.2/lib -lfftw3 -lacml -pgcpplibs -lrt
module_flag = -module

[dbg]
fflags = -g -r8 pc=64 -Msignextend -Minform=warn
cflags = -g -sb -C -errtags
f90flags = -Mfree -Mbounds

[opt]
fflags = -fastsse -tp k8-64 -r8 pc=64 -Msignextend -Minform=warn
cflags = -O
f90flags = -Mfree 
