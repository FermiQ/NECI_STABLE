[main]
fc = mpif90
cc = mpic++
ld = mpif90
ldflags = -L $(LD_LIBRARY_PATH)
compiler = INTEL-ifort9-on-LINUX
cpp = cpp -C -traditional
cppflags = -D__Linux -DHAVE_SSE2 -D__INT64 -DPARALLEL -D__SHARED_MEM
libs = -L ~/src/lib/fftw-3.1.2/lib -L ~/lib/fftw-3.1.2/lib -lfftw3  -lmkl_lapack -lmkl_ia32 -lguide -lpthread  -cxxlib -lrt
module_flag = -module

[dbg]
fflags = -r8 -g -traceback
cflags = -g -C -traceback
f90flags = -check bounds -traceback

[opt]
fflags = -r8 -O3 
cflags = -O
