[main]
fc = ftn 
cc = g++
ld = ftn
ldflags = -m64 -rdynamic
libs = -lstdc++ -lrt

cpp = cpp -C -traditional
cppflags =  -D__Linux -DPOINTER8 -DPARALLEL -D__PATHSCALE__ -D__INT64 -DHAVE_SSE2 -D__SHARED_MEM -DCRAY_ETIME -DDISABLE_FFTW
compiler = pathf95-on-LINUX
module_flag = -J

[dbg]
fflags = -g -fno-second-underscore -e m
cflags = -g  -h noexceptions
ldflags = -g -Bstatic -rdynamic
f90flags = -ffortran-bounds-check -N255

[opt]
fflags = -O3 -s integer64 -e m
f90flags = -N255
cflags = -O -m64
ldflags = -O3 -rdynamic
