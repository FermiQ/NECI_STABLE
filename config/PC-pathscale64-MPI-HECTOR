[main]
fc = ftn
cc = g++ -m64
ld = ftn
ldflags = -m64
libs = -lfftw3 -lacml -lstdc++ -lrt
cpp = cpp -C -traditional
cppflags =  -D__Linux -DPOINTER8 -DPARALLEL -D__PATHSCALE__
compiler = pathf95-on-LINUX
module_flag = -module

[dbg]
fflags = -g -fno-second-underscore
cflags = -g
ldflags = -g -Bstatic
f90flags = -ffortran-bounds-check

[opt]
fflags = -O3 -OPT:Ofast -LNO:simd_verbose=ON -fno-second-underscore
ldflags = -O3
