[main]
cpp = cpp -P -C -traditional 
cppflags = -D__Linux -DLAPACK -DFFT_DEFAULT -DPOINTER8 -D__INT64
compiler = GCC-f95-on-LINUX
fc = gfortran
f77flags = -m64 -fcray-pointer
f90flags = -m64 -fcray-pointer -ffree-line-length-none
cc = g++
ld = gfortran
ldflags = -m64
libs = -L~/local/lib/fftw-3.2/64/gfortran/lib -lfftw3 -framework Accelerate -lstdc++
module_flag = -J

[dbg]
cflags = -m64 -g
fflags = -g

[opt]
