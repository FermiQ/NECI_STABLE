[main]
cpp = cpp -P -C -traditional 
cppflags = -D__Linux -DLAPACK -DFFT_DEFAULT -DPOINTER8 -DPARALLEL -D__INT64 -D__SHARED_MEM -DDISABLE_FFTW -D__GFORTRAN__
compiler = GCC-f95-on-LINUX
fc = mpif90
f77flags = -m64 -fcray-pointer
f90flags = -m64 -fcray-pointer -ffree-line-length-none
cc = mpicxx
ld = mpif90
ldflags = -m64 
libs = -framework Accelerate -lstdc++ -lm
module_flag = -J

[dbg]
cflags = -m64 -g
fflags = -g

[opt]
cflags = -m64 -O3
fflags = -O3
