[main]
fc = pgf90
compiler = PGI-pgf95-on-LINUX
cc = pgCC
ccd = g++
cpp = cpp -C -traditional
cppflags =  -D__Linux -D__INT64 -D__PGI
ld = pgf90
libs = -L /usr/local/shared/suse-10.1-1/fftw-3.1.2/lib -L /usr/local/shared/fftw3/lib -L /usr/local/fftw-3.1/lib -L /usr/local/fftw-3.0.1/lib -lfftw3 -llapack -lblas  -lpgsse1 -lpgsse2 -pgcpplibs -lrt
module_flag = -module

[dbg]
fflags = -g -Mr8 -Msignextend -Minform=warn
cflags = -g 
f90flags = -Mfree -Mbounds

[opt]
fflags = -Mr8 -Msignextend -Minform=warn -O4 -fast
cflags = -O
f90flags = -Mfree 
