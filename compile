#!/bin/bash

usage() {
    cat<<END
usage: ./compile [-d] [platform]
Clean build of NECI using platform (default: PC-PGI64) as the configuration.
Options:
    -d Compile with the compiler debug options on.
END
}

dbgflag=''

while getopts 'dh' options; do
    case $options in
        d)  dbgflag='-d';;
        h)  usage
            exit 1;;
        \?) usage
            exit 1;;
        *)  usage
            exit 1;;
    esac
done

# Remove flags from argument list
shift $(($OPTIND - 1))

if [ "$#" -ne 0 ]; then
	platform=$1
elif [ -e .compileconf ]; then
	# Read the user's default platform (if the .compileconf exists 
	# in the current working directory).
	platform=`cat .compileconf`
else
	platform=PC-PGI64
fi
echo "Using platform: $platform"

./Configure $dbgflag $platform -DEST=${PWD}/dest> Makefile2

cp irat.inc dest
sed -e 's/#CMPLXFLAG//' Makefile2 > Makefile
cp Makefile dest
touch *.F *.F90
make clean
cd dest
make neci.x
stat=$?
cd ..
exit $stat
