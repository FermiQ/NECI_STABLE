!   call MPI_BCAST (nNodes, 1, MPI_INTEGER, root, CommGlobal, ierr)
!   call MPI_BCAST (Nodes, nProcessors, MPI_INTEGER, root, int(CommGlobal,MPIArg), ierr)
!   call MPI_BCAST (ProcNode, nProcessors, MPI_INTEGER, root, int(CommGlobal,MPIArg), ierr)
!   call MPI_BCAST (NodeRoots, nProcessors, MPI_INTEGER, root, int(CommGlobal,MPIArg), ierr)
   allocate(CommNodes(0:nNodes-1))
   allocate(CommNodesDum(0:nNodes-1))
