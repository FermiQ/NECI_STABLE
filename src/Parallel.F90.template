   Node=Nodes(iProcIndex)
   iNodeIndex=Node%n  !Used as a plain integer version.
!   write(6,*) iNodeIndex,iProcIndex,Node%n,size(NodeRoots)
!   write(6,*) "***************************************"
!   call neci_flush(6)

   if (iProcIndex==NodeRoots(Node%n)) then
      bNodeRoot=.true.
      write(6,*) "I am the node root for node ", Node%n
   else
      bNodeRoot=.false.
   endif
   do i=0, nNodes-1
      n=0
      do j=0,nProcessors-1
         if(Nodes(j)%n==i) then
            if(j==iProcIndex) iIndexInNode=n 
            n=n+1
            GroupProc(n)=j
         endif
      enddo
      NodeLengths(i)=n
      GroupNodesDum=GroupNodes
      call MPI_Group_incl(int(Group,MPIArg),int(n,MPIArg),int(GroupProc,MPIArg),GroupNodesDum(i),ierr)  !Create a group 
      GroupNodes=GroupNodesDum
      CommNodesDum=CommNodes
      call MPI_Comm_Create(int(CommGlobal,MPIArg),int(GroupNodes(i),MPIArg),CommNodesDum(i),ierr) !Create the Communicator
      CommNodes=CommNodesDum
   enddo
   GroupRootsDum=GroupRoots
   call MPI_Group_incl(int(Group,MPIArg),int(nNodes,MPIArg),int(NodeRoots,MPIArg),GroupRootsDum,ierr)  !Create a group 
   GroupRoots=GroupRootsDum
   CommRootDum=CommRoot
   call MPI_Comm_Create(int(CommGlobal,MPIArg),int(GroupRoots,MPIArg),CommRootDum,ierr) !Create the Communicator
   CommRoot=CommRootDum
#else
   nNodes=1
   iIndexInNode=0
   ProcNode(0)=0
   NodeRoots(0)=0
   bNodeRoot=.true.
   allocate(NodeLengths(0:nNodes-1))
   allocate(CommNodes(0:nNodes-1))
   allocate(GroupNodes(0:nNodes-1))
   NodeLengths(0)=1
#endif /* def PARALLEL */
   Roots%n=-1  !A communicator index between roots
end subroutine

Subroutine MPIEnd(tExternal)
